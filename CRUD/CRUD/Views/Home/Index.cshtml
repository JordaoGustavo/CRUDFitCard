                <div class="table-responsive">
                    <table class="table table-borderless table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Razão Social</th>
                                <th scope="col">Categoria</th>
                                <th scope="col">Situação</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
